<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/colorTint</item>
        <item name="android:statusBarColor">@color/colorStatusBarBkg</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="segmentedControlButtonStyle">@style/SegmentedControlButton</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Material.Light.ActionBar.Solid">
        <item name="android:background">@color/colorActionBarBkg</item>
    </style>

    <style name="MyButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:textColor">@color/button_disabled_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MyHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>