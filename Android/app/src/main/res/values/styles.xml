<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorTint</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="buttonStyle">@style/MyButtonStyle</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="segmentedControlButtonStyle">@style/SegmentedControlButton</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorActionBarBkg</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyButtonStyle" parent="@android:style/Widget.Holo.Button">
        <item name="android:textColor">@color/button_disabled_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MyHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EventsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
